    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        },
        "schemas": {
            "RegisterDto": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "User name",
                        "example": "Alex"
                    },
                    "email": {
                        "type": "string",
                        "example": "alex@gmail.com"
                    },
                    "password": {
                        "type": "string",
                        "example": "alex"
                    }
                },
                "required": ["name", "email", "password"]
            },
            "RegisterResponse": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "User name",
                        "example": "Alex"
                    },
                    "email": {
                        "type": "string",
                        "example": "alex@gmail.com"
                    }
                }
            },
            "LoginDto": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "example": "alex@gmail.com"
                    },
                    "password": {
                        "type": "string",
                        "example": "alex"
                    }
                },
                "required": ["email", "password"]
            },
            "LoginResponse": {
                "type": "object",
                "properties": {
                    "token": {
                        "type": "string",
